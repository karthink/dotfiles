! Make left Alt a Super key
remove mod1 = Alt_R
keycode 108 = Super_L

! Make caps a ctrl key
remove Lock = Caps_Lock
keysym Caps_Lock = Control_L
add Lock = Caps_Lock
add Control = Control_L

! Make the hyper key a new modifier, mod3
!clear mod3
!clear mod4
!add mod3 = Hyper_L
!add mod4 = Super_L Super_R
