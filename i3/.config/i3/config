bindsym Shift+XF86AudioPrev exec --no-startup-id  playerctl previous
bindsym Shift+XF86AudioPlay exec --no-startup-id  playerctl stop
bindsym $mod+XF86AudioPlay exec --no-startup-id  mpvcontrol quit
